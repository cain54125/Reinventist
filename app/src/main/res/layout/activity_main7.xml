<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.cain.reinventist.Main7Activity">


    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8123"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView6"
            android:layout_below="@+id/textView7"
            android:text=" "
            android:textSize="50sp" />

        <TextView
            android:id="@+id/textView11123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView9"
            android:layout_below="@+id/textView10"
            android:layout_gravity="right"
            android:background="?attr/colorControlHighlight"
            android:gravity="right"
            android:text=" "
            android:textSize="50sp" />

        <TextView
            android:id="@+id/textView10123"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView8"
            android:layout_below="@+id/textView9"
            android:text=" "
            android:textSize="50sp" />

        <TextView
            android:id="@+id/textView9123"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView7"
            android:layout_below="@+id/textView8"
            android:layout_gravity="right"
            android:background="?attr/colorControlHighlight"
            android:gravity="right"
            android:text=" "
            android:textSize="50sp" />

        <TextView
            android:id="@+id/textView6123"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text=" "
            android:textSize="50sp" />

        <TextView
            android:id="@+id/textView12123"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="?attr/colorControlHighlight"
            android:gravity="right"
            android:textSize="50sp"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="bottom|end"
            android:inputType="textPersonName"
            android:text="你作了什麼復健呢?" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:onClick="Button01n"
            android:text="Button" />

    </LinearLayout>

</LinearLayout>
